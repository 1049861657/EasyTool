{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-server",
            "type": "shell",
            "command": "node",
            "args": ["server.js"],
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "服务器运行在.*"
                }
            }
        }
    ]
} 